{
  "name": "forests-decision-app-backend",
  "version": "1.0.0",
  "description": "Backend for Forests Decision GIS Application",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "apicache": "^1.6.3",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "https": "^1.0.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
